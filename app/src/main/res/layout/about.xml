<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-7702909260317154/6069816626"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/verTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/oauthTextView1"
                android:layout_below="@+id/oauthTextView1"
                android:text="バージョン情報" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright(C)2014-2016 meronmks All Rights Reserved\nこのアプリの開発者\nmeronmks　@meronmks"
                android:layout_below="@+id/verTextView" android:layout_alignLeft="@+id/verTextView"
                android:layout_alignStart="@+id/verTextView" android:layout_marginTop="17sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/oauthTextView1"
                android:layout_alignParentTop="true"
                android:text="@string/app_name" android:layout_marginTop="15sp"/>

            <TextView
                android:id="@+id/oauthTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="20sp"
                android:text="このアプリのバージョン" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginRight="20sp"
                android:layout_marginTop="16sp"
                android:text="このアプリは以下のライブラリ等を使用して作られています。\nTwitter4j\nGlide\njsoup\nAsyncHttpClient\nAndroid Device Compatibility Package\nMaterialLoadingProgressBar\nまたこのアプリは Apache License, Version 2.0 のライセンスで配布されている成果物を含んでいます。" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="16sp"
                android:text="使用アイコン等\nmonochromat\nmaterial-design-icons\n作者様に多大な感謝をいたします。" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="オープンソースライブラリ"
                android:id="@+id/aboutLicenseButton"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
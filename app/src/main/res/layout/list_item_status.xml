<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2sp"
    android:paddingBottom="2sp"
    android:id="@+id/listItemBase">

    <ImageView
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:id="@+id/UserIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_sync_white_48dp"
        android:layout_marginLeft="4sp"
        android:layout_marginTop="4sp" />

    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:id="@+id/RTUserIcon"
        android:src="@mipmap/ic_sync_white_24dp"
        android:layout_below="@+id/UserIcon"
        android:layout_alignRight="@+id/UserIcon"
        android:layout_alignEnd="@+id/UserIcon"
        android:layout_marginTop="4sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/UserIcon"
        android:layout_toEndOf="@+id/UserIcon"
        android:layout_marginLeft="4sp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_marginTop="4sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/Name"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:layout_weight="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@ScreenName"
                    android:id="@+id/ScreenName"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="8sp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:id="@+id/TweetDeletedStatus"
                    android:src="@mipmap/ic_delete_white_24dp"
                    android:layout_weight="0"/>
                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:id="@+id/LockedStatus"
                    android:src="@mipmap/ic_lock_white_24dp"
                    android:layout_marginRight="8sp"
                    android:layout_weight="0"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TweetText"
                android:id="@+id/TweetText"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="atTime"
                android:id="@+id/Time" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RT : 0"
                    android:id="@+id/RTCount"
                    android:layout_marginRight="8sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fav : 0"
                    android:id="@+id/FavCount" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via"
                android:id="@+id/Via"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginRight="4sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RTUserName"
                android:id="@+id/RTUserName"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>
        <View
            android:id="@+id/TweetStatus"
            android:layout_width="4sp"
            android:layout_height="fill_parent"
            android:background="@color/Blue"
            android:layout_weight="0" />
    </LinearLayout>
</RelativeLayout>
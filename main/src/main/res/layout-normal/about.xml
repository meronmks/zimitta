<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/verTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/oauthTextView1"
                    android:layout_below="@+id/oauthTextView1"
                    android:text="バージョン情報" />

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright(C)2014 meronmks All Rights Reserved\nこのアプリの開発者\nmeronmks　@meronmks"
                    android:layout_below="@+id/verTextView" android:layout_alignLeft="@+id/verTextView"
                    android:layout_alignStart="@+id/verTextView" android:layout_marginTop="17dp"/>

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/oauthTextView1"
                    android:layout_alignParentTop="true"
                    android:text="@string/app_name" android:layout_marginTop="15dp"/>

            <TextView
                    android:id="@+id/oauthTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="20dp"
                    android:text="このアプリのバージョン" />

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="17dp"
                    android:text="このアプリは以下のライブラリ等を使用して作られています。\nTwitter4j\nGlide\nZoomImageView\njsoup\nAsyncHttpClient\nAndroid Device Compatibility Package\nまたこのアプリは Apache License, Version 2.0 のライセンスで配布されている成果物を含んでいます。" />

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="16dp"
                    android:text="使用アイコン等\nmonochromat\n作者様に多大な感謝をいたします。" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="オープンソースライブラリ"
                    android:id="@+id/aboutLicenseButton"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Activity_Mention"
    android:padding="8dp"
    android:background="@drawable/button_select_coloer" >

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Image_button"
        android:layout_below="@+id/m_time"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:padding="15.0px"
        android:background="#ff000000"
        android:textColor="#ffffffff"
        android:textSize="15sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/m_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/m_icon"
        android:layout_toRightOf="@+id/m_icon"
        android:text="名前入ります"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:layout_marginLeft="4sp" />

    <ImageView
        android:id="@+id/m_icon"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/input_text"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/m_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/m_name"
        android:layout_alignRight="@+id/input_text"
        android:layout_below="@+id/m_name"
        android:text="本文本文本文本文本文本文本文本文本文本文"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginLeft="4sp"
        android:maxLines="5"
    	android:scrollbars="vertical" />

    <TextView
        android:id="@+id/m_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/m_name"
        android:layout_toRightOf="@+id/m_name"
        android:gravity="right"
        android:singleLine="true"
        android:text="meron"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:layout_marginLeft="6sp" />

    <TextView
        android:id="@+id/m_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m_time"
        android:layout_alignBottom="@+id/m_time"
        android:layout_toRightOf="@+id/m_time"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:layout_marginLeft="6sp" />

    <TextView
        android:id="@+id/m_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/m_text"
        android:layout_below="@+id/m_text"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="9sp" />

    <Button
        android:id="@+id/Image_button"
        android:layout_width="133sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/image_select"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/Select_Image_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/input_text"
        android:src="@drawable/clear" />

    <TextView
        android:id="@+id/textCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_text"
        android:layout_alignRight="@+id/input_text"
        android:text="140"
        android:textColor="#ff888888" />

    <ImageView
        android:id="@+id/Select_Image_button1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/input_text"
        android:layout_toRightOf="@+id/Select_Image_button"
        android:src="@drawable/clear" />

    <ImageView
        android:id="@+id/Select_Image_button3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/input_text"
        android:layout_toRightOf="@+id/Select_Image_button1"
        android:src="@drawable/clear" />

    <ImageView
        android:id="@+id/Select_Image_button2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/input_text"
        android:layout_toRightOf="@+id/Select_Image_button3"
        android:src="@drawable/clear" />

    <ImageButton
        android:id="@+id/listTlReloadButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/Select_Image_button"
        android:layout_alignTop="@+id/Select_Image_button"
        android:background="@drawable/button_select_coloer"
        android:src="@drawable/x_c"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/Button02"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/Select_Image_button1"
        android:layout_alignTop="@+id/Select_Image_button1"
        android:background="@drawable/button_select_coloer"
        android:src="@drawable/x_c"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/Button03"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/Select_Image_button2"
        android:layout_alignTop="@+id/Select_Image_button2"
        android:background="@drawable/button_select_coloer"
        android:src="@drawable/x_c"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/Button04"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/Select_Image_button3"
        android:layout_alignTop="@+id/Select_Image_button3"
        android:background="@drawable/button_select_coloer"
        android:src="@drawable/x_c"
        android:visibility="gone" />

</RelativeLayout>

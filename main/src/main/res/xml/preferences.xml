<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
            android:title="一度に読み込むツイート数"
            android:key="Load_Tweet"
            android:entries="@array/entries_list_preference"
            android:entryValues="@array/entryvalues_list_preference"
            android:defaultValue="20"/>
    <CheckBoxPreference
            android:title="ツイート長押しでメニュー表示"
            android:key="Tap_Setting"
            android:summary=""
            android:defaultValue="true"/>
    <CheckBoxPreference
        android:title="ループしてるツイートの圧縮"
        android:key="zipTweet"
        android:summary="ループしている内容を圧縮します"
        android:defaultValue="false"/>

    <CheckBoxPreference
            android:title="ツイート送信ボタンを上に配置"
            android:key="PostTweetTweetPosition"
            android:summary="チェックを外すと下になります"
            android:defaultValue="true"/>

    <CheckBoxPreference
            android:title="Streamingを使う"
            android:key="Streem_Flug"
            android:summary="現在Homeのみ有効"
            android:defaultValue="false"/>
    <PreferenceScreen
            android:title="Streaming設定">
        <CheckBoxPreference
                android:title="ツイートを貯める"
                android:summary="更新を押すと反映されます（要再起動）"
                android:key="Streeming_stok"/>
        <CheckBoxPreference
                android:title="ツイートが貯まったら通知"
                android:summary="トーストで通知します"
                android:key="Streeming_Nof_Tost"/>
        <CheckBoxPreference
                android:title="フォロー外のリプライを取得する"
                android:summary="フォローしていない人へのリプを取得します（要再起動）"
                android:key="Streeming_FF_Mention"/>
        <CheckBoxPreference
                android:title="Wi-Fiのみで有効"
                android:summary="Wi-Fi接続時のみでStreamingを有効にします"
                android:key="Streeming_Wifi"/>
    </PreferenceScreen>
    <PreferenceScreen
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:title="通知設定"
            android:summary="Streaming有効時のみ">
        <CheckBoxPreference
                android:title="Mention通知"
                android:key="NotificationMen"
                android:enabled="false"
                android:defaultValue="ture"
                android:selectable="true" />
        <CheckBoxPreference
                android:title="RT通知"
                android:key="NotificationRT"
                android:enabled="false"
                android:defaultValue="ture"
                android:selectable="true" />
        <CheckBoxPreference
                android:title="Fav通知"
                android:key="NotificationFav"
                android:enabled="false"
                android:defaultValue="ture"
                android:selectable="true" />
        <CheckBoxPreference
                android:title="DM通知"
                android:key="NotificationDM"
                android:enabled="false"
                android:defaultValue="ture"
                android:selectable="true" />
        <CheckBoxPreference
                android:title="Follow通知"
                android:key="NotificationFol"
                android:enabled="false"
                android:defaultValue="ture"
                android:selectable="true" />
    </PreferenceScreen>
    <CheckBoxPreference
            android:title="公式のミュートリストを使う"
            android:key="mute_flag"/>
    <PreferenceScreen
            android:title="About"
            android:key="About"/>
</PreferenceScreen>